---
import AdminLayout from '../layouts/AdminLayout.astro';

const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000';
---

<AdminLayout title="Dashboard">
  <div class="space-y-8">
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-black-soft border border-gray-800 rounded-xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm mb-1">Produkte</p>
            <p class="text-3xl font-medium" id="product-count">-</p>
          </div>
          <div class="w-12 h-12 bg-brown-warm/20 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-brown-warm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-black-soft border border-gray-800 rounded-xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm mb-1">Veröffentlicht</p>
            <p class="text-3xl font-medium" id="published-count">-</p>
          </div>
          <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-black-soft border border-gray-800 rounded-xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm mb-1">Entwürfe</p>
            <p class="text-3xl font-medium" id="draft-count">-</p>
          </div>
          <div class="w-12 h-12 bg-yellow-500/20 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-black-soft border border-gray-800 rounded-xl p-6">
      <h2 class="text-lg font-medium mb-4">Schnellaktionen</h2>
      <div class="flex flex-wrap gap-4">
        <a 
          href="/products/new"
          class="inline-flex items-center gap-2 px-4 py-2 bg-brown-warm hover:bg-brown-light text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4" />
          </svg>
          Neues Produkt
        </a>
        <a 
          href="/products"
          class="inline-flex items-center gap-2 px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
          </svg>
          Alle Produkte
        </a>
      </div>
    </div>

    <!-- Recent Products -->
    <div class="bg-black-soft border border-gray-800 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-medium">Neueste Produkte</h2>
        <a href="/products" class="text-sm text-brown-warm hover:text-brown-light transition-colors">
          Alle anzeigen →
        </a>
      </div>
      <div id="recent-products" class="space-y-3">
        <p class="text-gray-500 text-sm">Lade Produkte...</p>
      </div>
    </div>
  </div>
</AdminLayout>

<script define:vars={{ API_URL }}>
  async function loadDashboard() {
    try {
      const response = await fetch(`${API_URL}/api/products`);
      const data = await response.json();
      
      const products = data.products || [];
      const published = products.filter(p => p.published);
      const drafts = products.filter(p => !p.published);

      document.getElementById('product-count').textContent = products.length;
      document.getElementById('published-count').textContent = published.length;
      document.getElementById('draft-count').textContent = drafts.length;

      // Recent products
      const recentContainer = document.getElementById('recent-products');
      if (products.length === 0) {
        recentContainer.innerHTML = '<p class="text-gray-500 text-sm">Noch keine Produkte vorhanden</p>';
      } else {
        recentContainer.innerHTML = products.slice(0, 5).map(product => `
          <a 
            href="/products/${product._id}"
            class="flex items-center justify-between p-4 bg-gray-800/30 rounded-lg hover:bg-gray-800/50 transition-colors"
          >
            <div>
              <h3 class="font-medium">${product.name}</h3>
              <p class="text-sm text-gray-400">${product.category || 'Keine Kategorie'}</p>
            </div>
            <span class="text-xs px-2 py-1 rounded ${product.published ? 'bg-green-500/20 text-green-400' : 'bg-yellow-500/20 text-yellow-400'}">
              ${product.published ? 'Veröffentlicht' : 'Entwurf'}
            </span>
          </a>
        `).join('');
      }
    } catch (error) {
      console.error('Error loading dashboard:', error);
      document.getElementById('recent-products').innerHTML = 
        '<p class="text-red-400 text-sm">Fehler beim Laden. Stellen Sie sicher, dass der API-Server läuft.</p>';
    }
  }

  loadDashboard();
</script>
