---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de" class="h-full bg-black-rich">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Art Of Men Admin Panel" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title} | Art Of Men Admin</title>
  </head>
  <body class="h-full font-sans text-white antialiased">
    <div class="flex h-full">
      <!-- Sidebar -->
      <aside class="w-64 bg-black-soft border-r border-gray-800 flex flex-col">
        <!-- Logo -->
        <div class="h-16 flex items-center px-6 border-b border-gray-800">
          <span class="text-lg tracking-[0.15em] uppercase font-medium">
            Art Of Men
          </span>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 space-y-1">
          <a 
            href="/" 
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-400 hover:bg-gray-800/50 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Dashboard
          </a>
          
          <a 
            href="/products" 
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-400 hover:bg-gray-800/50 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            Produkte
          </a>

          <a 
            href="/products/new" 
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-400 hover:bg-gray-800/50 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4" />
            </svg>
            Neues Produkt
          </a>
        </nav>

        <!-- Footer -->
        <div class="p-4 border-t border-gray-800">
          <p class="text-xs text-gray-500 text-center">
            Admin Panel v1.0
          </p>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 overflow-auto bg-black-rich">
        <!-- Header -->
        <header class="h-16 flex items-center justify-between px-8 border-b border-gray-800 bg-black-soft/50 backdrop-blur-sm sticky top-0 z-10">
          <h1 class="text-lg font-medium">{title}</h1>
          <div class="flex items-center gap-4">
            <span class="text-sm text-gray-400">Admin</span>
          </div>
        </header>

        <!-- Page Content -->
        <div class="p-8">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
